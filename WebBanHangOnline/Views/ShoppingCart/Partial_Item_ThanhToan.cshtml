
@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>

    @if (Model != null && Model.Any())
    {
        <h3>Giỏ Hàng <span class="text-center btn btn-sm btn-success" style="float:right;width:35px;border-radius:50%;font-size:16px;">@Model.Count()</span></h3>
       
        var Tongtien = decimal.Zero;
<table  class="table  table-striped table-bordered">
    <tr class="text-center">
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Giá SP</th>
    </tr>
    @foreach (var item in Model)
    {
        Tongtien += item.TotalPrice;

        <tr class="text-center">
            <td><img src="@item.ProductImage" style="width:90px;height:80px" /></td>
            <td style="width:50%;"><a href="/Product/ProductDetail/@item.productId">@item.productName</a></td>
            <td>$ @item.Price</td>
        </tr>

    }
    <tr style="background-color:lawngreen">

        <td colspan="2" class="text-center" style="font-size:20px;"><i class="fa fa-money"></i>Tổng tiền thanh toán:</td>
        <td style="font-size:20px;">$@string.Format("{0:#,##0}", Tongtien)</td>
    </tr>
   
</table>
        
     

    }
    else
    {
      
    }

