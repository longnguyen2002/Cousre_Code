@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>

<table  class="table table-bordered " >
    <tr  class="text-center">
        <th>STT</th>
        <th>Ảnh Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Giá </th>
        <th style="width:80px;">Số Lượng</th>
        <th>Thành Tiền</th>
        <th></th>
    </tr>

    @if (Model != null && Model.Any())
    {
        var i = 0;
        var Tongtien = decimal.Zero;
        foreach (var item in Model)
        {
            Tongtien += item.TotalPrice;
            <tr class="text-center" id="trow_@item.productId">
                <td>@(i+1)</td>
                <td style="text-align:center"><img src="@item.ProductImage" style="width:100px; height: 90px; box-shadow: 0px 0px 2px 8px rgba(0, 0, 0, 0.3);border-radius:30px" /></td>
                <td>
                    <a style="font-size:15px;color:black" href="/Product/ProductDetail/@item.productId">
                        @item.productName
                    </a>
                </td>
                <td>$@item.Price</td>
                <td><input type="number" class="form-control" id="Quantity_@item.Quantity" value="@item.Quantity" min="0" /></td>
                <td>$@string.Format("{0:#,##0}", item.TotalPrice)</td>
                <td>
                    <a style="border-radius:20px;" data-id="@item.productId" href="#" class="btn btn-sm btn-danger btnDelete"> Xóa</a>
                    @*<a  style="border-radius:20px;" data-id="@item.productId" href="#" class="btn btn-sm btn-success btnUpdate"> Cập nhập</a>*@
                </td>
            </tr>
            i++;
        }
        <tr class="table">
            <td class="text-right" style="font-size:15px;font-weight:600" colspan="5">Tổng số tiền: </td>
            <td style="font-weight:600;" class="text-center">$@string.Format("{0:#,##0}", Tongtien)</td>
        </tr>
      
    }
    else
    {
        <tr>
            <th colspan="7">Không có sản phẩm nào trong giỏ hàng!!!</th>
        </tr>
    }


</table>
