@model WebBanHangOnline.Models.EF.Subscribe 

<div style="border-left:1px solid black;padding:0px 15px;" class="add_review">
    
    @using (Html.BeginForm("Add", "Subscribe", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false);
        <form id="review_form" action="post">
            <div>
                <h1 style="font-size:25px;"><i class="fa fa-paint-brush"></i> Bình Luận</h1>
                <div class="form-group">

                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên người dùng" })
                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @placeholder = "Bình luận" })
                    @Html.ValidationMessageFor(x => x.Detail, null, new { @class = "text-danger" })
                </div>
                @*<input id="review_name" class="form_input input_name" type="text" name="name" placeholder="Name*" required="required" data-error="Name is required.">
        <input id="review_email" class="form_input input_email" type="email" name="email" placeholder="Email*" required="required" data-error="Valid email is required.">*@
            </div>
            <div>
                <h1>Your Rating:</h1>
                <ul class="user_star_rating">
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                </ul>

            </div>
            <div class="text-left text-sm-right">
                <button id="review_submit" type="submit" class="red_button review_submit_btn trans_300" value="Submit">submit</button>
            </div>
        </form>
    }

</div>