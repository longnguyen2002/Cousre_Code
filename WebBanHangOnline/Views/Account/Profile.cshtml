@model WebBanHangOnline.Models.ApplicationUser

@{
    ViewBag.Title = "Thông tin cá nhân";

}

<div style="margin-top:160px;" class="container product_section_container">
    <h1 style="width:100%;text-align:center;">Thông tin cá nhân</h1>

    <hr />
    <div class="container">

        
        <div class="row">
            <div class="col-md-4">
                <div style="background-color: darkgoldenrod; border-radius: 20px;">
                    <div style="padding:30px;" class="form-group">
                        <img style="border-radius:50%;width:300px;height:300px;" src="https://th.bing.com/th/id/OIP.fMemMGJNIPd5fLTI6TwJwQHaHa?pid=ImgDet&rs=1" />
                    </div>
                </div>
            </div>
            <div style="border-left:2px solid red;margin-left:10px;" class="col-md-7">
                <div class="form-group">
                    <lable for="examoleInputEmail1"><i class="fa fa-user-o"></i> <b>Họ và tên</b>:</lable>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Fullname" value="@Model.Fullname" readonly />
                </div>
                <div class="form-group">    
                    <lable for="examoleInputEmail1"><i class="fa fa-address-book-o"></i> <b>Tên tài khoản</b>:</lable>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly />
                </div>
                <div class="form-group">
                    <lable for="examoleInputEmail1"><i class="fa fa-phone"></i> <b>Số điện thoại</b>:</lable>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone" readonly />
                </div>
                <div class="form-group">
                    <lable for="examoleInputEmail1"><i class="fa fa-envelope-o"></i> <b>Email</b>:</lable>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly />
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-success">Cập Nhập</button>
                </div>
            </div>
            
        </div>
    </div>
    
    <hr />
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
