@model WebBanHangOnline.Models.EF.productscategory
@{
    ViewBag.Title = "Cập nhập Danh Sách Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link"><i style="color:black" class="fa fa-home"></i> Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/ProductCategorys/" class="nav-link"><i style="color:blue" class="fa fa-database"></i> Danh mục sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link"><i  class="fa fa-share"></i> @ViewBag.Title</a>
        </li>
    </ul>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/ProductCategorys/"><i style="color:black" class="fa fa-database"></i> Danh sách sản phẩm</a></li>
                        <li class="breadcrumb-item active"><i class="fa fa-share"></i> @ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-book"></i> Thông tin cập nhập danh sách sản phẩm</h3>


            </div>
            <div class="card-body">
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "ProductCategorys", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(false);
                        @Html.HiddenFor(x => x.id)
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"><i class="fa fa-address-book"></i> Tên Tiêu Đề</label>
                                        <div style="box-shadow: 0px 2px 5px #DCD7D7">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tiêu đề" })
                                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputFile"><i class="fa fa-image"></i> Ảnh phông nền</label>
                                        <div style="box-shadow: 0px 2px 5px #DCD7D7" class="input-group">
                                            <div class="custom-file">
                                                @Html.TextBoxFor(x => x.Icon, new { @id = "txtIcon", @class = "form-control" })
                                            </div>
                                            <div class="input-group-append">
                                                <input type="button" value="Tài Ảnh" onclick="BrowseServer('txtIcon');" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                           
                            <div class="form-group">
                                <label for="exampleInputPassword1"><i class="fa fa-send-o"></i> Alias</label>
                                <div style="box-shadow: 0px 2px 5px #DCD7D7">
                                    @Html.TextAreaFor(x => x.Alias, new { @class = "form-control" })
                                </div>

                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1"><i class="fa fa-commenting-o"></i> Seo Titile</label>
                                <div style="box-shadow: 0px 2px 5px #DCD7D7">
                                    @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                                </div>

                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1"><i class="fa fa-commenting-o"></i> Seo Description</label>
                                <div style="box-shadow: 0px 2px 5px #DCD7D7">
                                    @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control" })
                                </div>

                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1"><i class="fa fa-commenting-o"></i> Seo Keywords</label>
                                <div style="box-shadow: 0px 2px 5px #DCD7D7">
                                    @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                                </div>

                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-cog fa-spin"></i> Save</button>
                                <a href="/Admin/ProductCategorys/" class="btn btn-danger" type="submit"> Quay Lại</a>
                            </div>
                        </div>

                    }
                    <!-- your steps content here -->

                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '~/Content/ckeditor/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
}