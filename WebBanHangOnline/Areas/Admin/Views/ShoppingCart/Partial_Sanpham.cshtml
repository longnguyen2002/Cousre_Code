@model IEnumerable<WebBanHangOnline.Models.EF.OrderDetail>

@if (Model != null && Model.Any())
{
    var i = 1;
    <table  style="box-shadow: -1px 0px 8px 0 rgb(128, 128, 128);" class="table table-bordered table-striped table-success">
        <thead>
            <tr style="background-color:cornflowerblue;color:blanchedalmond" class="text-center">
                <th>#</th>
                <th>Ảnh Sản phẩm</th>
                <th>Tên Số lượng</th>
                <th>Giá Sản phẩm</th>
                <th>Số Lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
     
        <tbody>
           
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@i</td>
                    <td><img src="@item.Product.Image" style="width: 80px; height: 70px; border-radius: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);"/></td>
                    <td><b>@item.Product.Title</b></td>
                    <td>$ @item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@string.Format("{0:#,##0}", (item.Price * item.Quantity))</td>
                    
                </tr>
                i++;
            }
        </tbody>
    </table>
}
