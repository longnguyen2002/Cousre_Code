@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Thêm Mới tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars text-warning"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link"><i style="color:black" class="fa fa-home"></i> Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Account" class="nav-link"> @ViewBag.Title</a>
        </li>
    </ul>
}


<div style="cursor:pointer" class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section style="margin:10px 10px;margin-top: 10px; width: 100%; height: 60px" class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#"><i style="color:black" class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active"> @ViewBag.Title</li>
                    </ol>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <section class="content">

        <!-- Default box -->
        <div style="box-shadow: 10px 5px 10px 5px #DCD7D7;border-radius:20px" class="card">
            <div class="card-header">
                <h3 style="margin-top:6px" class="card-title"><i class="fa fa-book"></i> @ViewBag.Title</h3>

            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "User", FormMethod.Post, new { }))
                {
                    @Html.ValidationSummary(false)
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tài khoản</label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = " Nhập tài khoản ......." })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Họ tên</label>
                                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = " Nhập Họ tên ......." })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = " Nhập email ......." })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = " Nhập số điện thoại ......." })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Quyền</label>
                                @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền-", new { @class = "form-control", @placeholder = " Nhập email ......." })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mật Khẩu</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = " Nhập mật khẩu ......." })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = " Nhập mật khẩu ......." })
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="	fa fa-plus-circle"></i> Thêm Mới</button>
                        <a href="/admin/user/index" class="btn btn-sm btn-danger"><i class="	fa fa-remove"></i> Quay Lại</a>
                    </div>
                    
                }
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
</div>

