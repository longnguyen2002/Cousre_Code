@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Thêm mới chức năng phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars text-warning"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link"><i style="color:black" class="fa fa-home"></i> Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Role" class="nav-link"> @ViewBag.Title</a>
        </li>
    </ul>
}


<div style="cursor:pointer" class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section style="margin:10px 10px;margin-top: 10px; width: 100%; height: 60px" class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#"><i style="color:black" class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active"> @ViewBag.Title</li>
                    </ol>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <section class="content">

        <!-- Default box -->
        <div style="box-shadow: 10px 5px 10px 5px #DCD7D7;border-radius:20px" class="card">
            <div class="card-header">
                <h3 style="margin-top:6px" class="card-title"><i class="fa fa-book"></i> @ViewBag.Title</h3>

            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Role", FormMethod.Post, new {}))
                {
                    @Html.ValidationSummary(false)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Tên Quyền</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control",@placeholder=" Nhập phân Quyền ......." })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="	fa fa-plus-circle"></i> Thêm Mới</button>
                        <button href="/admin/role/index" class="btn btn-sm btn-danger"><i class="	fa fa-remove"></i> Quay Lại</button>
                    </div>
                }
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
</div>

