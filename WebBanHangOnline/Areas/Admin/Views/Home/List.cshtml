@model  IEnumerable<WebBanHangOnline.Models.EF.Product>


@if (Model != null)
{
    <div class="card-header border-0">
        <h3 class="card-title"><b>Danh sách sản phẩm được xem nhiều</b></h3>
        <div class="card-tools">
           
            <a href="#" class="btn btn-tool btn-sm">
                <i style="color:chartreuse" class="fas fa-download"></i>
            </a>    

            <a href="/admin/products/" class="btn btn-tool btn-sm">
                <i style="color:forestgreen" class="fa fa-eye"></i>
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table   table-valign-middle">
            <thead> 
                <tr style="background-color:cornflowerblue;">
                   
                    <th>Product</th>
                    <th>Price</th>
                    <th>Sales</th>
                    <th><i class="fa fa-eye"></i></th>
                    <th>More</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>
                            <img src="@item.Image" alt="" class="img-circle img-size-32 mr-2">
                            <span style="font-size:12px;">@item.Title</span>
                            <!--Display sản phẩm mới hay đang sales-->
                            @if (item.IsSale == true)
                            {
                                <span class="badge bg-danger">Sales</span>
                            }
                            else
                            {
                                <span class="badge bg-success">New</span>
                            }
                        </td>
                        <td class="text-center">$@string.Format("{0:#,##0}", item.Price)</td>
                        <!--Display Giá sale-->
                        <td class="text-center">
                            @if (item.PriceSale > item.Price)
                            {
                                <small class="text-warning mr-1">
                                    <i class="fas fa-arrow-down"></i>
                                    0.5%
                                </small>
                            }
                            else
                            {
                                <small class="text-success mr-1">
                                    <i class="fas fa-arrow-up"></i>
                                    12%
                                </small>
                            }

                        </td>
                        <td class="text-center">@item.ViewCount</td>
                        <td class="text-center">
                            <a href="#" class="text-muted">
                                <i class="fas fa-search"></i>
                            </a>
                        </td>
                    </tr>
                }



            </tbody>
            
        </table>
        
    </div>
}    