                                </div>-->*@
                                <!-- /.tab-pane -->

                              
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>
                        
                    

                    }
                </div>
                    <!-- your steps content here -->

                </div>
            </div>
            <!-- /.card-body -->
           
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->
        
    </section>
    <!-- /.content -->
</div>
